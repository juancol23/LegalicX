<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabs.LoginLegalicActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DecisionActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fondoweblic"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="25dp">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="64dp"
            android:background="@drawable/logolegalic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAccesso"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center|bottom">
<!--
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" /> -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="311dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/accesso_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Usuario"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"

                android:visibility="gone" />

            <EditText
                android:id="@+id/accesso_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="14dp"

                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/accesso_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:text="Acceder"
                android:textColor="@color/white"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/acceso_create_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_dorado"
                android:gravity="center"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="-47dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/lic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="REGISTRATE GRATIS"
                        android:textColor="@color/dorado"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/accessRelatoGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/design_white_radius"
                android:gravity="center"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="-47dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_google" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Inicia sesión con GMAIL"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/loginAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:background="@drawable/design_white_radius"
                android:gravity="center"
                android:padding="15dp"

                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Inicia sesión"
                    android:textColor="@color/white" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="Al hacer click en omitir estas aceptando los"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_terminos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="terminos y condiciones de uso políticas de privacidad."
                    android:textColor="#2B4DC8"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="¿Olvidate tu contraseña? "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/acceso_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" Click Aquí."
                    android:textColor="#da152c" />

            </LinearLayout>


            <TextView
                android:id="@+id/omitir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="right"
                android:text="Omitir "
                android:textColor="@color/white" />


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <FrameLayout
                android:id="@+id/accessRelatoGoogle2"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="22dp"
                    android:clickable="false"
                    android:src="@drawable/ic_google" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="Continuar con google"
                    android:textColor="@color/white" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:clickable="false"
        android:gravity="center"
        android:text="©"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:textSize="13dp"
        android:gravity="center"
        android:text="Law Technology 2022"
        android:textColor="@color/white" />




    <RelativeLayout
        android:id="@+id/btnToLogin"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:background="@drawable/design_white_radius"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Inicia sesión"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </RelativeLayout>

</RelativeLayout>